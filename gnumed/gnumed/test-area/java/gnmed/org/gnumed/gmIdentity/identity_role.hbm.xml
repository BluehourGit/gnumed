<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmIdentity.identity_role"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class="hilo">
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <set
            name="superTypes"
            table="link_role_identity"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="subtype"
              />

              <many-to-many
                  class="org.gnumed.gmIdentity.identity_role"
                  column="supertype"
                  outer-join="auto"
              />

        </set>

        <set
            name="subTypes"
            table="link_role_role"
            lazy="true"
            inverse="false"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="supertype"
              />

              <many-to-many
                  class="org.gnumed.gmIdentity.identity_role"
                  column="subtype"
                  outer-join="auto"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-identity_role.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
