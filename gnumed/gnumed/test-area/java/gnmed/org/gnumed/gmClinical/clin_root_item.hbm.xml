<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.clin_root_item"
        dynamic-update="false"
        dynamic-insert="false"
        discriminator-value="R"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="hilo">
            </generator>
        </id>

        <discriminator
            column="TYPE"
            type="string"
            length="2"
        />

        <many-to-one
            name="clin_encounter"
            class="org.gnumed.gmClinical.clin_encounter"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="clin_encounter"
        />

        <many-to-one
            name="clin_episode"
            class="org.gnumed.gmClinical.clin_episode"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="clin_episode"
        />

        <property
            name="narrative"
            type="java.lang.String"
            update="true"
            insert="true"
            column="narrative"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-clin_root_item.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="org.gnumed.gmClinical.allergy"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="A"
        >

        <many-to-one
            name="enum_allergy_type"
            class="org.gnumed.gmClinical.enum_allergy_type"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="enum_allergy_type"
        />

        <property
            name="reaction"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reaction"
        />

        <property
            name="substance"
            type="java.lang.String"
            update="true"
            insert="true"
            column="substance"
        />

        <property
            name="substance_code"
            type="java.lang.String"
            update="true"
            insert="true"
            column="substance_code"
        />

        <property
            name="definite"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="definite"
        />

        </subclass>
        <subclass
            name="org.gnumed.gmClinical.clin_aux_note"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="X"
        >
        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        </subclass>
        <subclass
            name="org.gnumed.gmClinical.clin_history"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="H"
        >

        <many-to-one
            name="enum_hx_source"
            class="org.gnumed.gmClinical.enum_hx_source"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="enum_hx_source"
        />

        <many-to-one
            name="enum_hx_type"
            class="org.gnumed.gmClinical.enum_hx_type"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="enum_hx_type"
        />

        </subclass>
        <subclass
            name="org.gnumed.gmClinical.clin_note"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="N"
        >

        </subclass>
        <subclass
            name="org.gnumed.gmClinical.clin_physical"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="P"
        >

        </subclass>

    </class>

</hibernate-mapping>
