<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.clin_episode"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="hilo">
            </generator>
        </id>

        <many-to-one
            name="clin_health_issue"
            class="org.gnumed.gmClinical.clin_health_issue"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="clin_health_issue"
        />

        <set
            name="clin_root_items"
            lazy="false"
            inverse="true"
            cascade="all"
            sort="unsorted"
        >

              <key
                  column="clin_encounter"
              />

              <one-to-many
                  class="org.gnumed.gmClinical.clin_root_item"
              />
        </set>

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-clin_episode.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
