<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.category_type"
        dynamic-update="false"
        dynamic-insert="false"
        discriminator-value="c"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="hilo">
            </generator>
        </id>

        <discriminator
            column="type"
            type="string"
            length="2"
        />

        <set
            name="categorys"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="category"
              />

              <one-to-many
                  class="org.gnumed.gmClinical.category"
              />
        </set>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-category_type.xml
            containing the additional properties and place it in your merge dir.
        -->
        <subclass
            name="org.gnumed.gmClinical.quantified_type"
            dynamic-update="false"
            dynamic-insert="false"
            discriminator-value="q"
        >
        <property
            name="unit"
            type="java.lang.String"
            update="true"
            insert="true"
            column="unit"
        />

        </subclass>

    </class>

</hibernate-mapping>
