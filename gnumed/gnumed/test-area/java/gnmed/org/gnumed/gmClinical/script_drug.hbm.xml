<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.script_drug"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="hilo">
            </generator>
        </id>

        <set
            name="link_script_drugs"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="link_script_drug"
              />

              <one-to-many
                  class="org.gnumed.gmClinical.link_script_drug"
              />
        </set>

        <many-to-one
            name="identity"
            class="org.gnumed.gmIdentity.identity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="identity"
        />

        <many-to-one
            name="package_size"
            class="org.drugref.package_size"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="package_size"
        />

        <property
            name="directions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="directions"
        />

        <property
            name="dose_amount"
            type="java.lang.Double"
            update="true"
            insert="true"
            column="dose_amount"
        />

        <property
            name="frequency"
            type="int"
            update="true"
            insert="true"
            column="frequency"
        />

        <property
            name="prn"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="prn"
        />

        <property
            name="adjuvant"
            type="java.lang.String"
            update="true"
            insert="true"
            column="adjuvant"
        />

        <property
            name="current"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="current"
        />

        <property
            name="qty"
            type="java.lang.Double"
            update="true"
            insert="true"
            column="qty"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-script_drug.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
