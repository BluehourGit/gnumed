<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.link_script_drug"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class="hilo">
            </generator>
        </id>

        <many-to-one
            name="script_drug"
            class="org.gnumed.gmClinical.script_drug"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="script_drug"
        />

        <many-to-one
            name="script"
            class="org.gnumed.gmClinical.script"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="script"
        />

        <property
            name="repeats"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="repeats"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-link_script_drug.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
