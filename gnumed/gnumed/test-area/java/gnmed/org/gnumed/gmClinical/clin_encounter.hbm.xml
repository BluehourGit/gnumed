<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmClinical.clin_encounter"
        proxy="org.gnumed.gmClinical.clin_encounter"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
        >
            <generator class="hilo">
            </generator>
        </id>

        <many-to-one
            name="location"
            class="org.gnumed.gmGIS.address"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="location"
        />

        <many-to-one
            name="provider"
            class="org.gnumed.gmIdentity.identity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="provider"
        />

        <many-to-one
            name="enum_encounter_type"
            class="org.gnumed.gmClinical.enum_encounter_type"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="enum_encounter_type"
        />

        <many-to-one
            name="curr_encounter"
            class="org.gnumed.gmClinical.curr_encounter"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="curr_encounter"
        />

        <set
            name="clin_root_items"
            lazy="false"
            inverse="false"
            cascade="all"
            sort="unsorted"
        >

              <key
                  column="clin_encounter"
              />

              <one-to-many
                  class="org.gnumed.gmClinical.clin_root_item"
              />
        </set>

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <many-to-one
            name="identity"
            class="org.gnumed.gmIdentity.identity"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="identity"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-clin_encounter.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
