<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.gnumed.gmGIS.state"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class="hilo">
            </generator>
        </id>

        <many-to-one
            name="country"
            class="org.gnumed.gmGIS.country"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="country"
        />

        <property
            name="code"
            type="java.lang.String"
            update="true"
            insert="true"
            column="code"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <property
            name="deprecated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="deprecated"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-state.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
