<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.accountability.Accountability"
		table="accountability"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

       <many-to-one
	       name="commissioner"
		   class="xgmed.domain.accountability.Party"
		   column="commissioner"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

       <many-to-one
	       name="responsible"
		   class="xgmed.domain.accountability.Party"
		   column="responsible"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

<set role="actions" table="action_accountability" lazy="true">
<key column="accountability_id"/>
<many-to-many class="xgmed.domain.planning.Action" column="action_id"/>
</set>

	</class>

</hibernate-mapping>
