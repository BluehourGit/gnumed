<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.observation.AssuranceLevel"
		table="assurance_level"
		discriminator-value="1"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

		<discriminator
			column="type"
			type="string"
		/>

	    <!--
			To add non XDoclet properties, create a file named
			    hibernate-properties-AssuranceLevel.xml
			containing the additional properties and place it in your merge dir.
	    -->

		<subclass
			name="xgmed.domain.observation.ActiveObservation"
			discriminator-value="A"
		>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>
		<subclass
			name="xgmed.domain.observation.Hypothesis"
			discriminator-value="H"
		>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>
		<subclass
			name="xgmed.domain.observation.Projection"
			discriminator-value="j"
		>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>

	</class>

</hibernate-mapping>
