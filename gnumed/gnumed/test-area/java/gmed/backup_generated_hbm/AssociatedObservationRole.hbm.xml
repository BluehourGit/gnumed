<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.observation.AssociatedObservationRole"
		table="associated_observation_role"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

       <many-to-one
	       name="describer"
		   class="xgmed.domain.observation.AssociativeFunction"
		   column="describer"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

       <many-to-one
	       name="observation"
		   class="xgmed.domain.observation.Observation"
		   column="observation"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

	    <!--
			To add non XDoclet properties, create a file named
			    hibernate-properties-AssociatedObservationRole.xml
			containing the additional properties and place it in your merge dir.
	    -->

	</class>

</hibernate-mapping>
