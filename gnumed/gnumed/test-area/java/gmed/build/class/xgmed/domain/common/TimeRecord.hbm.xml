<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.common.TimeRecord"
		table="timeRecord"
		discriminator-value="R"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

		<discriminator
			column="type"
			type="string"
			length="2"
		/>

	    <!--
			To add non XDoclet properties, create a file named
			    hibernate-properties-TimeRecord.xml
			containing the additional properties and place it in your merge dir.
	    -->

		<subclass
			name="xgmed.domain.common.TimePeriod"
			discriminator-value="P"
		>

       <many-to-one
	       name="finish"
		   class="xgmed.domain.common.Timepoint"
		   column="finish"
		   not-null="false"
		   unique="false"
		   cascade="all"
		   outer-join="auto"
        />

        <property
	    	name="indefinite"
            type="java.lang.Boolean"
            column="indefinite"
            not-null="false"
			unique="false"
		/>

       <many-to-one
	       name="start"
		   class="xgmed.domain.common.Timepoint"
		   column="start"
		   not-null="false"
		   unique="false"
		   cascade="all"
		   outer-join="auto"
        />

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>
		<subclass
			name="xgmed.domain.common.Timepoint"
			discriminator-value="T"
		>

        <property
	    	name="timeValue"
            type="java.util.Date"
            column="timeValue"
            not-null="false"
			unique="false"
		/>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>

	</class>

</hibernate-mapping>
