<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.planning.resource.ResourceAllocation"
		table="resource_allocation"
		discriminator-value="R"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

		<discriminator
			column="type"
			type="string"
			length="2"
		/>

       <many-to-one
	       name="executedAction"
		   class="xgmed.domain.planning.ExecutedAction"
		   column="executedAction"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

       <many-to-one
	       name="proposedAction"
		   class="xgmed.domain.planning.ProposedAction"
		   column="proposedAction"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

       <many-to-one
	       name="quantity"
		   class="xgmed.domain.common.Quantity"
		   column="quantity"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

       <many-to-one
	       name="resourceType"
		   class="xgmed.domain.planning.resource.ResourceType"
		   column="resourceType"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

	    <!--
			To add non XDoclet properties, create a file named
			    hibernate-properties-ResourceAllocation.xml
			containing the additional properties and place it in your merge dir.
	    -->

		<subclass
			name="xgmed.domain.planning.resource.SpecificAllocation"
			discriminator-value="S"
		>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		
-->	
		<subclass
			name="xgmed.domain.planning.resource.ConsumableAllocation"
			discriminator-value="C"
		>

       <many-to-one
	       name="holding"
		   class="xgmed.domain.planning.resource.Holding"
		   column="holding"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>
		<subclass
			name="xgmed.domain.planning.resource.TimeAllocation"
			discriminator-value="T"
		>

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>

		</subclass>

	</class>

</hibernate-mapping>
