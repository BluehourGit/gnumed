<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.observation.ObservationConcept"
		table="observation_concept"
		discriminator-value="O"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

		<discriminator
			column="type"
			type="string"
			length="2"
		/>

        <one-to-one
            name="coding"
			class="xgmed.domain.observation.Coding"
			cascade="none"
			outer-join="auto"
			constrained="false"
	    />

        <property
	    	name="description"
            type="java.lang.String"
            column="description"
            not-null="false"
			unique="false"
		/>

<set role="associativeFunctions" table="associative_function_observation_concept_args" readonly="true" lazy="true">
<key column="observationConcept"/>
<many-to-many class="xgmed.domain.observation.AssociativeFunction" column="associativeFunction"/>
</set>


<set role="producers" readonly="true" lazy="true">
<key column="observationConcept"/>
<one-to-many class="xgmed.domain.observation.AssociativeFunction"/>
</set>

		<subclass
			name="xgmed.domain.observation.Phenomenon"
			discriminator-value="P"
		>

       <many-to-one
	       name="phenomenonType"
		   class="xgmed.domain.observation.PhenomenonType"
		   column="phenomenonType"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

<!-- JRS:FIXME - why was this self inclusion here? A mistake?		

-->	
		</subclass>

	</class>

</hibernate-mapping>
