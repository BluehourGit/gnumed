<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.common.Quantity"
		table="quantity"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

        <property
	    	name="number"
            type="java.lang.Double"
            column="number"
            not-null="false"
			unique="false"
		/>

        <one-to-one
            name="resourceAllocation"
			class="xgmed.domain.planning.resource.ResourceAllocation"
			cascade="none"
			outer-join="auto"
			constrained="false"
	    />

       <many-to-one
	       name="unit"
		   class="xgmed.domain.common.Unit"
		   column="unit"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

	    <!--
			To add non XDoclet properties, create a file named
			    hibernate-properties-Quantity.xml
			containing the additional properties and place it in your merge dir.
	    -->

	</class>

</hibernate-mapping>
