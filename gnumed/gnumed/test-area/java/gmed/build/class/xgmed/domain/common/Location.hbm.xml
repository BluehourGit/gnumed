<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping.dtd">

<hibernate-mapping>

	<class 
		name="xgmed.domain.common.Location"
		table="location"
	>

	    <id 
			name="id"
			type="long"
		>
			<generator class="hilo.long">
			</generator>
	    </id>

        <property
	    	name="code"
            type="java.lang.String"
            column="code"
            not-null="false"
			unique="false"
		/>

        <property
	    	name="name"
            type="java.lang.String"
            column="name"
            not-null="false"
			unique="false"
		/>

       <many-to-one
	       name="parent"
		   class="xgmed.domain.common.Location"
		   column="parent"
		   not-null="false"
		   unique="false"
		   cascade="none"
		   outer-join="auto"
        />

<set role="subs"  readonly="true" lazy="true">
	<key column="location"/>
	<one-to-many class="xgmed.domain.common.Location"/>
</set>

	</class>

</hibernate-mapping>
